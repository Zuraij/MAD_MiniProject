                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:text="Setting"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        />
                </LinearLayout>

